= simple_form_for @user, url: new_user_session_path, html: {class: 'user-form', 'ng-submit': 'uiCtrl.submitForm()'} do |f|
  =f.input :username, class: 'user-form-input', 'ng-change': 'uiCtrl.checkForm()'
  =f.input :password, class: 'user-form-input', 'ng-change': 'uiCtrl.checkForm()'
  =f.submit t('login'), 'ng-class': '{ "form-filled" : uiCtrl.isFormComplete }' , class: 'btn'