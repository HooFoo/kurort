= form_for @comment do |f|
  - if @comment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@comment.errors.count, "error")} prohibited this comment from being saved:"
      %ul
        - @comment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :point
    = f.text_field :point
  .field
    = f.label :text
    = f.text_field :text
  .field
    = f.label :image
    = f.text_field :image
  .actions
    = f.submit 'Save'
