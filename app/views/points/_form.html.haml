= form_for @point do |f|
  - if @point.errors.any?
    #error_explanation
      %h2= "#{pluralize(@point.errors.count, "error")} prohibited this point from being saved:"
      %ul
        - @point.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :lng
    = f.text_field :lng
  .field
    = f.label :lat
    = f.text_field :lat
  .field
    = f.label :open
    = f.time_select :open
  .field
    = f.label :close
    = f.time_select :close
  .field
    = f.label :extra
    = f.text_field :extra
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :lang
    = f.text_field :lang
  .actions
    = f.submit 'Save'
